<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="gridartistsnameRowModel" type="com.musica.app.modules.popularartists.data.model.GridartistsnameRowModel"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumnartistsname"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="vertical">
        <ImageView android:id="@+id/imageImage"
            android:layout_gravity="start"
            android:layout_height="@dimen/_184pxh"
            android:layout_width="@dimen/_184pxh"
            android:scaleType="centerCrop" circular="@{true}"
            imageRes="@{@drawable/img_ellipse}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse"/>
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtArtistsName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:letterSpacing="0.01" android:singleLine="true"
            android:text="@{gridartistsnameRowModel.txtArtistsName}"
            style="@style/txtUrbanistromanbold18" tools:text="@string/lbl_ariana_grande"/>
    </LinearLayout>
</layout>
